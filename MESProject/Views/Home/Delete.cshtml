@model MESProject.Models.WorkOrder

@{
    ViewData["Title"] = "刪除工單";
}

<h1>刪除工單</h1>

<h3>您確定要刪除這筆工單嗎？</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            工單編號
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkOrderId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
