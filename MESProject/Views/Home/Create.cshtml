@model MESProject.Models.WorkOrder

@{
    ViewData["Title"] = "新增工單";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>@ViewData["Title"]</h1>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductCode" class="control-label"></label>
                <input asp-for="ProductCode" class="form-control" />
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PlannedStartTime" class="control-label"></label>
                <input asp-for="PlannedStartTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="PlannedStartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActualStartTime" class="control-label"></label>
                <input asp-for="ActualStartTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="ActualStartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompletionTime" class="control-label"></label>
                <input asp-for="CompletionTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="CompletionTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductionLine" class="control-label"></label>
                <input asp-for="ProductionLine" class="form-control" />
                <span asp-validation-for="ProductionLine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">新增</button>
                <a asp-action="Index" class="btn btn-secondary">返回清單</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}